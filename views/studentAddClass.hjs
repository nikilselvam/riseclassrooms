{{<layout}}

{{$title}}{{title}}{{/title}}

{{$head}}
    <script type="text/javascript" src="/javascripts/studentAddClass.js" async> </script>
    <link rel="stylesheet" href="/stylesheets/addStudentClass.css" >
{{/head}}


{{$body}}
<div class="container">
    <h1>Add Class</h1>
    <form class="form-inline">
        <div class="form-group">
            <input type="search" class="form-control" id="search-input" placeholder="Search for a class">
        </div>
        <div class="form-group">
            <button id="search-submit-button" class="btn btn-success"><span class="glyphicon glyphicon-search"></span> Search</button>
        </div>
    </div>
    <div class="table-responsive" id="search-results-div" style="display:none">
    <form method="post" action="/">
            <table class="table table-hover">

        <thead>
                <tr>
                        <td>Class #</td>
                        <td>Class Name</td>
                        <td>Sessions</td>
                        <td>Add</td>
                </tr>
        </thead>
        <tbody>
                <tr data-id="0">
                        <td name="classNumber">CSE 486</td>
                        <td name="className">Capstone II</td>
                        <td name="numOfSessions">3</td>
