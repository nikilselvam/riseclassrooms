{{<layout}}

{{$title}}{{title}}{{/title}}

{{$head}}
<script type="text/javascript" src="/javascripts/session.js" async></script>
{{/head}}

{{$body}}
	<div class="container">
  	<h1>New Session</h1>	
	 <form action="/session/create" method="post">
          <div class="form-group">
            <label for="class-name"">Duration:</label>
  			<select name="duration" id="duration" onchange="getDuration(this)">
				<option value="5">5 minutes</option>
				<option value="10">10 minutes</option>
				<option value="15">15 minues</option>
				<option value="20">20 minutes</option>
			</select>
          </div>
          <input id="submitButton" type="submit" class="btn btn-info" value="Submit">
    </form>
</div>
{{/body}}

{{/layout}}
